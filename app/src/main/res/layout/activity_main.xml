<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fontFamily="@font/luckiest_guy"
    android:background="#FCFCFC"
    tools:context=".MainActivity">

    <FrameLayout
        android:id="@+id/main_frame_layout"
        android:layout_width="match_parent"
        android:layout_height="505dp"
        android:layout_above="@id/divider"
        android:layout_below="@id/main_toolbar"
        android:layout_marginTop="106dp"
        android:layout_marginBottom="-35dp"
        android:fontFamily="@font/luckiest_guy"
        android:paddingTop="100dp">

        <com.google.android.material.divider.MaterialDivider
            android:id="@+id/divider2"

            android:layout_width="match_parent"
            android:layout_height="455dp"
            android:layout_marginBottom="-618dp"
            android:backgroundTint="#54A867" />


    </FrameLayout>


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/main_toolbar"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="458dp"
        android:background="#54A867"
        app:itemIconTint="@color/black"
        android:fontFamily="@font/luckiest_guy"
        app:itemTextColor="#0A0A0A"
        app:menu="@menu/bottom_navigation_menu">

    </com.google.android.material.bottomnavigation.BottomNavigationView>

    <FrameLayout
        android:id="@+id/main_frame_layout"
        android:layout_width="match_parent"
        android:layout_height="81dp"
        android:layout_above="@id/divider"
        android:layout_below="@id/main_toolbar"
        android:layout_marginTop="576dp"
        android:layout_marginBottom="-81dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="224dp"
                android:layout_height="match_parent"
                android:orientation="horizontal"></LinearLayout>

            <LinearLayout
                android:layout_width="189dp"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/main_toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#54A867"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="10dp"
                        android:fontFamily="@font/luckiest_guy"
                        android:text="Nuevo"
                        android:textColor="@color/white"
                        android:textSize="22sp"
                        android:textStyle="bold" />

                    <ImageButton
                        android:id="@+id/main_search_btn"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="10dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:src="@drawable/icon_search"
                        app:tint="@color/white" />

                </RelativeLayout>

            </LinearLayout>
        </LinearLayout>

        <com.google.android.material.divider.MaterialDivider
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginBottom="-618dp" />

    </FrameLayout>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="220dp"
        android:layout_height="161dp"
        android:paddingTop="10pt"
        app:srcCompat="@drawable/logo_direct_message" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="214dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="false"
        android:layout_alignParentEnd="false"
        android:layout_marginStart="197dp"
        android:layout_marginEnd="0dp"
        android:fontFamily="@font/luckiest_guy"
        android:paddingTop="75dp"
        android:text="Direct Message"
        android:textColor="#111111"
        android:textSize="20sp" />


</RelativeLayout>